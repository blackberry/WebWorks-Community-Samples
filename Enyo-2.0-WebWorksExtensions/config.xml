<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:rim="http://www.blackberry.com/ns/widgets" 
        version="1.0.0.0" id="enyoExtensionSample" xml:lang="en">

	<name>Enyo Extensions</name>
	<description>Sample Enyo Application with WebWorks Extensions</description>
	<author rim:copyright="2012" email="twindsor@rim.com" href="http://www.blackberry.com/developers">Tim Windsor</author>
	
	<icon src="img/enyologo.png"/>
	<rim:loadingScreen backgroundColor="#151619" onFirstLaunch="true" foregroundImage="img/enyo_banner.png"></rim:loadingScreen>
	<rim:orientation mode="auto" />
	
	<content src="index.html"/>
	
	<rim:permissions>
		<rim:permit>access_shared</rim:permit>
	</rim:permissions>
	
	<feature id="blackberry.app" required="true" version="1.0.0.0"/>
	<feature id="blackberry.app.event" required="true" version="1.0.0.0"/>
	<feature id="blackberry.system" required="true" version="1.0.0.0"/>
	<feature id="blackberry.system.event" required="true" version="1.0.0.0"/>
	<feature id="blackberry.utils" required="true" version="1.0.0.0"/>
	<feature id="blackberry.io.file" required="true" version="1.0.0.0"/>
	<feature id="blackberry.io.dir" required="true" version="1.0.0.0"/>
	
	<access subdomains="true" uri="*"/>

